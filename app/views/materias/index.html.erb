<%- model_class = Materia -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<%= form_tag request.path, :method => 'get' do %> 
 <%= content_tag :label do %> 
 Buscar Materia: 
 <%= text_field_tag :search, params[:search] %> 
 <%= submit_tag "Consultar", :name => nil, :class => 'btn-inverse' %> 
 <% end %> 
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:curso_id) %></th>
      <th>Opciones</th>
    </tr>
  </thead>
  <tbody>
    <% @materias.each do |materia| %>
      <tr>
        <td><%= link_to materia.id, materia_path(materia) %></td>
        <td><%= materia.nombre %></td>
        <td><%= materia.curso_id %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.editar")),
                      edit_materia_path(materia), :class => 'btn btn-mini btn-inverse' %>
          <%= link_to t('.destroy', :default => t("helpers.links.eliminar")),
                      materia_path(materia),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br /> 
<br /> 
<div align="center"> 
 <%= will_paginate @materias, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %> 
</div> 

<p> 
 Total Materias : <%= @materias.total_entries %> 
</p>

<br />

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_materia_path,
            :class => 'btn btn-primary' %>
